<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Raffel Draw</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="css/main.css">
  </head>
  <body>
    <div class="container">
        <div class="row justify-content-md-center" style="padding-top: 5rem!important;">
            <div class="col-9">
                <img style="padding-left: 72px;" src="img/header-logo.png" class="img-fluid" alt="...">
            </div>
        </div>
        <div class="row">
          <div class="col-12 py-4">
              <div class="title">Grand Raffle Draw</div>
          </div>
          <div class="col-12">
              <div class="number-diy">
                  <div class="data" data-number="5675"></div>
              </div>
          </div>
          <div class="col-12 text-center pt-4 pb-5">
              <img id="start" src="img/button.png" style="width: 100px;cursor: pointer;"/>
          </div>
        </div>
        <div class="row pb-5 justify-content-md-center">
          <div class="col-9">
              <img src="img/footer-logo.png" class="img-fluid" />
          </div>
        </div>
    </div>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script src="rollNumber.js"></script>
    <script>
      let status = "<%= status %>";
      if(status == "complete"){
          $('#start').addClass('disable');
      }
      $diy = $('.number-diy .data');
      $diy.rollNumber({
        number: $diy[0].dataset.number, 
        speed: 500, 
        interval: 200,
        rooms: 4,
        space: 110,
        // symbol: ',', 
        fontStyle: {
          'font-size': 102,
          'font-family': 'ds-digitalbold',
        }
      })
    </script>
  </body>
</html>


